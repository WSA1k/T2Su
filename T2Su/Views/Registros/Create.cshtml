@model T2Su.Models.Registro

@{
    ViewData["Title"] = "Criar novo Registro";
}

<h1>Criar Novo Registro</h1>

<h4>Registro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <input asp-for="Cliente" class="form-control" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigodeContainer" class="control-label"></label>
                <input asp-for="CodigodeContainer" class="form-control" />
                <span asp-validation-for="CodigodeContainer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EscolhaId" class="control-label"></label>
                <select asp-for="EscolhaId" class ="form-control" asp-items="ViewBag.EscolhaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CadastroId" class="control-label"></label>
                <select asp-for="CadastroId" class ="form-control" asp-items="ViewBag.CadastroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CateId" class="control-label"></label>
                <select asp-for="CateId" class ="form-control" asp-items="ViewBag.CateId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipomoviId" class="control-label"></label>
                <select asp-for="TipomoviId" class ="form-control" asp-items="ViewBag.TipomoviId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeFim" class="control-label"></label>
                <input asp-for="DataDeFim" class="form-control" />
                <span asp-validation-for="DataDeFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
